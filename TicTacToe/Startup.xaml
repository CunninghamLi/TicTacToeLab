<Window x:Class="TicTacToe.Startup"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TicTacToe"
        mc:Ignorable="d"
        Title="Startup" Height="450" Width="800">
    <Grid>
        <Label Content="Choose X or O to start playing (usually X starts first)" HorizontalAlignment="Left" Margin="277,103,0,0" VerticalAlignment="Top"/>
        <Image x:Name="img2" Source="Images/tic-tac-toe_o.png"  HorizontalAlignment="Left" Height="100" Margin="312,187,0,0" VerticalAlignment="Top" Width="100" MouseDown="Image_MouseDown"/>
        <Image Source="Images/tic-tac-toe_x.png" HorizontalAlignment="Left" Height="100" Margin="174,187,0,0" VerticalAlignment="Top" Width="100" MouseDown="Image_MouseDown"/>
        <Button Content="Change O to X" HorizontalAlignment="Left" Margin="488,237,0,0" VerticalAlignment="Top" Click="Button_Click"/>

    </Grid>
</Window>
